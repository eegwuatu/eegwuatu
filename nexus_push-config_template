#!usr/bin/env python3

from netmiko import ConnectHandler
from getpass import getpass

host = input('Enter Nexus hostname/IP: ')
username = input('Enter Username: ')
password = getpass('Enter password: ')
command = input('Enter command: ')
#nexus_list = 'nexus_device_list.txt'

#with open(nexus_list) as nexus:
#	host = nexus.read().splitlines()

#for dev in nex_dev:
nex_device = { 
    'device_type': 'cisco_nxos',
    'host': host,
    'username': username,
    'password': password,
    }	

ssh_nex = ConnectHandler(**nex_device)

output = ssh_nex.send_command(command)
print(output)

